<!-- Validation failure messages -->
<% if @like.present? %>
  <% if @like.errors.any? %>
    <% @like.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new like
</h1>


<hr>

<!-- Form like start -->
<form action="/create_like" method="post">
<!-- Form like end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :created_at, @like.user_id), :class => "form-control") %>
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <!-- Label and input for movie_id start -->
  <div class="form-group">
    <label for="movie_id">
      Movie
    </label>

    <!-- Input for movie_id start -->
    <%= select_tag(:movie_id, options_from_collection_for_select(Movie.all, :id, :title, @like.movie_id), :class => "form-control") %>
    <!-- Input for movie_id end -->
  </div>
  <!-- Label and input for movie_id end -->

  <!-- Label and input for show_id start -->
  <div class="form-group">
    <label for="show_id">
      Show
    </label>

    <!-- Input for show_id start -->
    <%= select_tag(:show_id, options_from_collection_for_select(Show.all, :id, :name, @like.show_id), :class => "form-control") %>
    <!-- Input for show_id end -->
  </div>
  <!-- Label and input for show_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create like
  </button>
</form>

<hr>

<a href="/likes">
  Go back
</a>
