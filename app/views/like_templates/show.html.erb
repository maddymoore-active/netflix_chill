<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Like #<%= @like.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/likes" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @like.user %>
          <a href="/likes/<%= @like.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit like
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @like.user %>
          <a href="/delete_like/<%= @like.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete like
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <% if @like.user.present? %>
          <a href="/users/<%= @like.user_id %>">
            <%= @like.user.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>
        Movie
      </dt>
      <dd>
        <% if @like.movie.present? %>
          <a href="/movies/<%= @like.movie_id %>">
            <%= @like.movie.title %>
          </a>
        <% end %>
      </dd>

      <dt>
        Show
      </dt>
      <dd>
        <% if @like.show.present? %>
          <a href="/shows/<%= @like.show_id %>">
            <%= @like.show.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@like.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@like.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

