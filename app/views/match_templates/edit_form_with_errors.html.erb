<!-- Validation failure messages -->
<% if @match.errors.any? %>
  <% @match.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit match #<%= @match.id %>
</h1>

<hr>

<!-- Form match start -->
<form action="/update_match/<%= @match.id %>" method="post">
<!-- Form match end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :created_at, @match.user_id), :class => "form-control") %>
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <!-- Label and input for other_id start -->
  <div class="form-group">
    <label for="other_id">
      Other
    </label>

    <!-- Input for other_id start -->
    <%= select_tag(:other_id, options_from_collection_for_select(User.all, :id, :created_at, @match.other_id), :class => "form-control") %>
    <!-- Input for other_id end -->
  </div>
  <!-- Label and input for other_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Update match
  </button>
</form>

<hr>

<a href="/matches">
  Go back
</a>
