<!-- Validation failure messages -->
<% if @match.errors.any? %>
  <% @match.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit match #<%= @match.id %>
</h1>

<hr>

<!-- Form match start -->
<form action="/update_match/<%= @match.id %>" method="post">
<!-- Form match end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @match.user_id %>">
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <!-- Label and input for other_id start -->
  <div class="form-group">
    <label for="other_id">
      Other
    </label>

    <!-- Input for other_id start -->
    <input type="text" id="other_id" name="other_id" class="form-control" value="<%= @match.other_id %>">
    <!-- Input for other_id end -->
  </div>
  <!-- Label and input for other_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Update match
  </button>
</form>

<hr>

<a href="/matches">
  Go back
</a>
