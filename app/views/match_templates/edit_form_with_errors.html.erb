<% if @match.errors.any? %>
  <% @match.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit match #<%= @match.id %>
</h1>

<hr>

<form action="/update_match/<%= @match.id %>" method="post">

  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :created_at, @match.user_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="other_id">
      Other
    </label>

    <%= select_tag(:other_id, options_from_collection_for_select(User.all, :id, :created_at, @match.other_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update match
  </button>
</form>

<hr>

<a href="/matches">
  Go back
</a>
