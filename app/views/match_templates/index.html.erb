<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All matches
    </h1>

    <a href="/matches/new" class="btn btn-block btn-outline-secondary">
      Add a new match
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Other
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @matches.each do |match| %>
      <tr>
        <!-- Display match.id start -->
        <td>
          <%= match.id %>
        </td>
        <!-- Display match.id end -->

        <!-- Display match.user_id start -->
        <td>
          <%= match.user.created_at %>
        </td>
        <!-- Display match.user_id end -->

        <!-- Display match.other_id start -->
        <td>
          <%= match.other.created_at %>
        </td>
        <!-- Display match.other_id end -->

        <!-- Display match.created_at start -->
        <td>
          <%= time_ago_in_words(match.created_at) %> ago
        </td>
        <!-- Display match.created_at end -->

        <!-- Display match.updated_at start -->
        <td>
          <%= time_ago_in_words(match.updated_at) %> ago
        </td>
        <!-- Display match.updated_at end -->

        <td>
          <a href="/matches/<%= match.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
