<!-- Form like start -->
<form action="/create_like_from_movie" method="post">
<!-- Form like end -->

  <!-- Label and input for user_id start -->
  <!-- Input for "user_id" start -->
  <input type="hidden" name="user_id" value="<%= current_user.id %>">
  <!-- Input for "user_id" end -->
  <!-- Label and input for user_id end -->

  <!-- Label and input for movie_id start -->
  <!-- Input for movie_id start -->
  <input type="hidden" name="movie_id" value="<%= @movie.id %>">
  <!-- Input for movie_id end -->

  <!-- Label and input for show_id start -->
  <div class="form-group">
    <label for="show_id">
      Show
    </label>

    <!-- Input for show_id start -->
    <%= select_tag(:show_id, options_from_collection_for_select(Show.all, :id, :name, @like.show_id), :class => "form-control") %>
    <!-- Input for show_id end -->
  </div>
  <!-- Label and input for show_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create like
  </button>
</form>
