<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All movies
    </h1>

    <a href="/movies/new" class="btn btn-block btn-outline-secondary">
      Add a new movie
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Title
        </th>

        <th>
          Image
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @movies.each do |movie| %>
      <tr>
        <!-- Display movie.id start -->
        <td>
          <%= movie.id %>
        </td>
        <!-- Display movie.id end -->

        <!-- Display movie.title start -->
        <td>
          <%= movie.title %>
        </td>
        <!-- Display movie.title end -->

        <!-- Display movie.image start -->
        <td>
          <img src='<%= movie.image %>' class='img-fluid'>
        </td>
        <!-- Display movie.image end -->

        <!-- Display movie.created_at start -->
        <td>
          <%= time_ago_in_words(movie.created_at) %> ago
        </td>
        <!-- Display movie.created_at end -->

        <!-- Display movie.updated_at start -->
        <td>
          <%= time_ago_in_words(movie.updated_at) %> ago
        </td>
        <!-- Display movie.updated_at end -->

        <td>
          <a href="/movies/<%= movie.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
