<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Likes

    <a data-toggle="collapse" href="#show_likes_new_form">
      Add like
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @show.likes.each do |like| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/likes/<%= like.id %>">
          <%= like.user_id %>
        </a>

        <%if current_user == like.user %>
          <a href="/delete_like_from_show/<%= like.id %>">
            Delete
          </a>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="show_likes_new_form">
        <%= render partial: "show_templates/show_likes_new_form" %>
      </div>
    </div>

  </ul>
</div>
