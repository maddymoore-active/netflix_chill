<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All shows
    </h1>

    <a href="/shows/new" class="btn btn-block btn-outline-secondary">
      Add a new show
    </a>
  </div>
</div>

<!-- Ransack Code start -->
<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "show_templates/shows_search_form" %>
  </div>
</div>
<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Title
        </th>

        <th>
          Image
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @shows.each do |show| %>
      <tr>
        <!-- Display show.id start -->
        <td>
          <%= show.id %>
        </td>
        <!-- Display show.id end -->

        <!-- Display show.name start -->
        <td>
          <%= show.name %>
        </td>
        <!-- Display show.name end -->

        <!-- Display show.title start -->
        <td>
          <%= show.title %>
        </td>
        <!-- Display show.title end -->

        <!-- Display show.image start -->
        <td>
          <img src='<%= show.image %>' class='img-fluid'>
        </td>
        <!-- Display show.image end -->

        <!-- Display show.created_at start -->
        <td>
          <%= time_ago_in_words(show.created_at) %> ago
        </td>
        <!-- Display show.created_at end -->

        <!-- Display show.updated_at start -->
        <td>
          <%= time_ago_in_words(show.updated_at) %> ago
        </td>
        <!-- Display show.updated_at end -->

        <td>
          <a href="/shows/<%= show.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @shows, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
