<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Show #<%= @show.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/shows" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/shows/<%= @show.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit show
        </a>
      </div>

      <div class="col">
        <a href="/delete_show/<%= @show.id %>" class="btn btn-block btn-outline-secondary">
          Delete show
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @show.name %>
      </dd>

      <dt>
        Title
      </dt>
      <dd>
        <%= @show.title %>
      </dd>

      <dt>
        Image
      </dt>
      <dd>
        <img src="<%= @show.image %>" class="img-fluid">
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@show.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@show.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "show_templates/show_likes" %>
  </div>
</div>
